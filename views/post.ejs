<%- include('partials/_header') -%>

<body>

  <%- include('partials/_navigation') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= blog.title  %></h1>
            <h2 class="subheading"><%= blog.detail  %></h2>
            <span class="meta">Posted by
              <a href="#">Start Bootstrap</a>
             <%= blog.dateCreated.toDateString()  %></span>
             <img class="img-fluid" src="data:image/jpeg;base64,<%= blog.image.toString('base64') %>" alt="Post Image">
             <span>
              <%= blog.edited === true  ? "Edited" : ""  %>
             </span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">

         



      <div class="offset-3 mt-4">
        <a href="/blogs/edit/<%= blog._id %>" class="btn btn-primary mr-2">
          <i class="fas fa-edit"></i> Update
        </a>
        <a onclick="return confirm(`Are you sure to delete <%= blog.title.toUpperCase() %>?`)" href="/blogs/<%= blog._id %>?_method=DELETE" class="btn btn-danger">
          <i class="fas fa-trash-alt"></i> Delete
        </a>
        
        <button id="like-button-<%= blog._id %>" class="btn btn-secondary" onclick="likePost('<%= blog._id %>')">
          <i class="fas fa-thumbs-up"></i>
          <span id="like-count-<%= blog._id %>">
              <%= blog.likeCount %>
          </span>
          <%= blog.likeCount === 1 ? " Like" : " Likes" %>
      </button>
      
      </div>    
          
        </div>
      </div>
    </div>
  </article>

  <hr>

  <%- include('partials/_footer') -%> 

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

  <%- include('partials/_likeButtonAjax') -%>

</body>

</html>
